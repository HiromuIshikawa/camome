<%= form_tag '/missions/inbox', :method => 'get', :class => 'search' do %>
  <p class="form-inline" align="right">
    <%= check_box_tag :narrow, true, false, {} %>
    <span class="checkbox-caption">再利用メール</span>
    <%= text_field_tag :search, nil, class: 'form-control', style: 'width:150px' %>
    <i class="fa fa-search search-icon" onclick="$('.search').submit()"></i>
  </p>
<% end %>
<div class="clams-table">
  <table <%= inbox_classes %>>
    <thead>
      <tr>
        <th data-field="selected" data-checkbox="true" class="ct-selected"></th>
        <th date-field="summary" data-sortable="false" class="ct-summary">Subject</th>
        <th date-field="originator" data-sortable="false" class="ct-originator">Sender</th>
        <th date-field="date" data-sortable="true" class="ct-date">Date</th>
        <th data-field="icon" class="ct-icon"></th>
      </tr>
    </thead>
    <tbody>
      <% if clams.present? %>
        <% clams.each do |clam| %>
        <% if clam.fixed == false %>
          <tr class="draggable-clam fixed"
              data-id="<%= clam.id %>"
              data-summary="<%= clam.summary %>">
        <% else %>
          <tr class="draggable-clam"
              data-id="<%= clam.id %>"
              data-summary="<%= clam.summary %>">
        <% end %>
            <td></td>
            <td class="show-clam"><a href="#" class="fa fa-comment-o suggest-icon"></a> <%= clam.summary %></td>
            <td class="show-clam"><%= clam.originator %></td>
            <td class="show-clam"><%= process_date(clam.date, clam.date) %></td>
            <td><%= link_to "", { controller: "mail", action: "new", clam_id: clam.id }, class: "fa fa-repeat" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
