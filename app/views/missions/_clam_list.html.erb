<div class="clams-table">
  <table <%= inbox_classes %>>
    <thead>
      <tr>
        <th data-field="selected" data-checkbox="true"></th>
        <th date-field="summary" data-sortable="false">title</th>
        <th date-field="date" data-sortable="true">date</th>
        <th data-field="icon"></th>
      </tr>
    </thead>
    <tbody>
      <% if clams.present? %>
        <% clams.each do |clam| %>
          <tr class="draggable-clam"
              data-id="<%= clam.id%>"
              data-summary="<%= clam.summary%>">
            <td></td>
            <td><%= clam.summary %></td>
            <td><%= clam.date %></td>
            <td><%= link_to "", { controller: "mail", action: "new", clam_id: clam.id }, class: "fa fa-repeat" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
