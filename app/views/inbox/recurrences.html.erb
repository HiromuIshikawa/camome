<h1>Inbox</h1>
<%= render :partial => "inbox/create_form_of_recurrence"%>
<div class="row">
  <div class="recurrence inbox">
    <table
       id="table"
       class="test"
       date-class="recurrences table table-hover table-bordered table-condensed"
       data-toggle="table"
       data-height="500">
      <thead>
        <tr>
          <th>Recurrences</th>
        </tr>
      </thead>
      <tbody class="recurrences">
        <tr>
          <td class="new-recurrence"> 新しいリカーレンス </td>
        </tr>
        <% @recurrences.each do |recurrence| %>
        <%= render :partial => "inbox/recurrence_item", :locals => {:recurrence => recurrence} %>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="event-item inbox">
    <table
       id="table events"
       class="events table"
       data-class="table table-hover table-bordered table-condensed"
       data-toggle="table"
       data-height="500"
       data-striped="true"
       data-click-to-select="true"
       data-sort-name="date"
       data-sort-order="desc">
      <thead>
        <tr>
          <th data-field="state" data-checkbox="true" data-sortable="false"></th>
          <th data-field="title" data-sortable="false" data-width="50%">Title</th>
          <th data-field="date" data-width="45%" data-sortable="true">Date</th>
        </tr>
      </thead>
      <tbody class="event-inbox">
        <% @events.each do |event| %>
          <%= render :partial => "inbox/inbox_item", :locals => {:event => event} %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
